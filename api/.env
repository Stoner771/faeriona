# Faerion API Configuration
# Copy this file to .env and update the values for your environment

# API Settings
API_TITLE=Faerion Authentication API
API_VERSION=2.0.0

# Database
# For SQLite: sqlite:///./faerion_auth.db
# For MySQL: mysql+pymysql://user:password@localhost/faerion_db
# For PostgreSQL: postgresql://user:password@localhost/faerion_db
DATABASE_URL=sqlite:///./faerion_auth.db
SQLALCHEMY_ECHO=False

# Server
HOST=0.0.0.0
PORT=2004
RELOAD=True
WORKERS=4

# JWT & Security
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Email (SMTP) - Optional
SMTP_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@faerion.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/faerion.log

# Admin Default Account
ADMIN_EMAIL=admin@faerion.com
ADMIN_USERNAME=admin

# CORS Settings
# Add your frontend URLs here
ALLOWED_ORIGINS=http://team.heavencloud.in:2006,https://9430425c-4539-4f25-b772-b387e3e8f77b.lovableproject.com

# Features
ENABLE_TWO_FACTOR_AUTH=False
ENABLE_EMAIL_VERIFICATION=False

# Security (for production)
REQUIRE_HTTPS=False
SECURE_COOKIES=False
